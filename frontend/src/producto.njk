---
eleventyComputed:
    title: "{{ products[0].titleseo }}"
    description: "{{ productos[0].descseo }}"
    keywords: "{{ productos[0].keyseo }}"
layout: base.njk
pagination:
  data: collections.productos
  size: 1
  alias: producto
permalink: "/productos/{{ producto.slug.current }}/"
---

<div data-barba="container" data-barba-namespace="producto" data-css="producto" data-js="producto">

  <section id="section__hero" class="pad__lr__5 pad__top__10">
    <div class="column__1 max1400">
      <span class="categoria_producto">Tipo de producto: <a href="/productos/categorias/{{producto.categories | slugify}}">{{ producto.categories | join(", ") }}</a></span>
      <h1>{{ producto.title }}</h1>
    </div>
  </section>

  <section id="section__main__image">
    <div class="column__1 max1400">
      {% if producto.mainImage %}
        <picture>
            {% for format, images in producto.mainImage %}
            <source srcset="{{ images | srcset }}" sizes="(max-width: 1200px) 100vw, 1200px" type="image/{{ format }}">
            {% endfor %}
            <img src="{{ producto.mainImage.jpeg[0].url }}" alt="{{ producto.mainImage.altText }}">
        </picture>
      {% endif %}
    </div>
  </section>

  <section id="product__intro" class="pad__tb__5 pad__lr__10">
    <p><a href="/desarrollos/">Desarrollos </a><strong>/ Sobre el proyecto</strong></p>
    <div class="column__2 pad__tb__5">
      <div class="col__left">
        <h2>{{ producto.title }}</h2>
        <p>{{ producto.category }}</p>
      </div>
      <div class="col__right flex flex-row">
        <div>{{ producto.pageIntro.desc | safe }}</div>
        <a href="{{ producto.pageIntro.linkWeb }}" class="btn">
          Visitar sitio web
        </a> 
      </div>
    </div>
    <div class="column__2">
      <div class="col__left">
        {% if producto.pageIntro.img1 %}
          <picture>
              {% for format, images in producto.pageIntro.img1 %}
              <source srcset="{{ images | srcset }}" sizes="(max-width: 1200px) 100vw, 1200px" type="image/{{ format }}">
              {% endfor %}
              <img src="{{ proyecto.pageIntro.img1.jpeg[0].url }}" alt="{{ proyecto.pageIntro.img1.altText }}">
          </picture>
        {% endif %}
      </div>
      <div class="col__right">
        {% if producto.pageIntro.img2 %}
          <picture>
              {% for format, images in producto.pageIntro.img2 %}
              <source srcset="{{ images | srcset }}" sizes="(max-width: 1200px) 100vw, 1200px" type="image/{{ format }}">
              {% endfor %}
              <img src="{{ producto.pageIntro.img2.jpeg[0].url }}" alt="{{ producto.pageIntro.img2.altText }}">
          </picture>
        {% endif %}
      </div>
    </div>
  </section>
  <section id="section__body" class="pad__all__5">
    <div class="column__1 max1400">
      <h3>Descripci√≥n</h3>
      {{ producto.body | safe }}
    </div>
  </section>
  <section id="product__intro" class="pad__tb__5 pad__lr__10">

  </section>

</div>