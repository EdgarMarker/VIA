<li class="card card__producto">
  {% if item.mainImage %}
  <a class="card__pic" href="/desarrollos/{{ item.slug.current }}">
    <picture>
      {% for format, images in item.mainImage %}
      <source
        srcset="{{ images | srcset }}"
        sizes="(max-width: 600px) 100vw, 600px"
        type="image/{{ format }}"
      />
      {% endfor %}
      <img
        src="{{ item.mainImage.jpeg[0].url }}"
        alt="{{ item.mainImageAlt }}"
      />
    </picture>
    {% else %}
    <p>No image available</p>
    {% endif %} {% if item.categories %}
  </a>
  <div class="card__body">
    <span class="card__category">
      {% for category in item.categories %}
      <span>/ </span><a href="/desarrollos/{{ category | slugify }}"
        >{{ category }}{% if not loop.last %}, {% endif %}</a
      >
      {% endfor %}
    </span>
    {% else %}
    <span class="card__category">Sin categoría/</span>
    {% endif %}
    <h2>
      <a href="/desarrollos/{{ item.slug.current }}">{{ item.title }}</a>
    </h2>
    <h3>Ubicación: <span>{{item.colonia}}</span></h3>
    <h3>Año: <span>{{item.year}}</span></h3>
    <a class="btn btn--right" href="/desarrollos/{{ item.slug.current }}">Ir al proyecto</a>
  </div>
</li>
