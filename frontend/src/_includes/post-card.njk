<li class="card card__articulo splide__slide">

    
    <a class="card__pic" href="/articulos/{{ item.slug.current }}">
    {% if item.mainImage %}
      <picture>
          {% for format, images in item.mainImage %}
          <source srcset="{{ images | srcset }}" sizes="(max-width: 600px) 100vw, 600px" type="image/{{ format }}">
          {% endfor %}
          <img src="{{ item.mainImage.jpeg[0].url }}" alt="{{ item.mainImageAlt }}">
      </picture>
    {% else %}
      <p>No image available</p>
    {% endif %}
    </a>
    <div class="column__1">
        <div class="autor__fecha"><span class="card_author">Escrito por: {{ item.author}}</span>
          <span class="card__date">el {{ item.publishedAt | date("MM/dd/yy") }}</span>
        </div>
        {% if item.categories %}
        <span class="card__category">
          {% for category in item.categories %}
            <a href="/articulos/categorias/{{category | slugify}}">Categoría: {{ category }}{% if not loop.last %}, {% endif %}</a>
          {% endfor %}
        </span>
      {% else %}
        <span class="card__category">Sin categoría /</span>
      {% endif %}
      <h2><a href="/articulos/{{ item.slug.current }}">{{ item.title }}</a></h2>
      <p class="excerpt__p">{{ item.excerpt }}</p>
      <a class="btn btn--right" href="/articulos/{{ item.slug.current }}">Ir al artículo</a>
    </div>
    

 